<Window x:Class="AdisG3.revTareas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Detalles de la Tarea Enviada" Height="500" Width="700">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock FontWeight="Bold" FontSize="20" Text="Detalles de la Tarea Enviada"/>

            <TextBlock FontSize="16" Text="Tarea de:"/>
            <TextBox x:Name="txtNombreEstudiante" HorizontalAlignment="Left" FontSize="14" IsReadOnly="True" Height="28" Width="96"/>

            <TextBlock x:Name="txtTitulo" FontSize="16" Text="Título de la Tarea:" Margin="0 10 0 0"/>
            <TextBlock x:Name="txtTituloTarea" FontSize="16" Text=""/>

            <TextBlock FontSize="16" Text="Tarea:" Margin="0 10 0 0"/>
            <TextBox x:Name="txtTareaTXT" FontSize="14" IsReadOnly="True" Height="98"/>

            <TextBlock FontSize="16" Text="Archivo de la tarea:" Margin="0 10 0 0"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="txtTareaArchivo" FontSize="14" Height="28"/>
                <Button Content="Visualizar archivo" Click="DownloadButton_Click" Margin="0 50 0 0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
