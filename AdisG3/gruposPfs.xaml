<Window x:Class="AdisG3.gruposPfs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Grupos de Estudiantes" Height="650" Width="1000" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Grupos" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,9,0,0" FontSize="35"/>
        <Label Content="Estudiantes" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="263,87,0,0" FontSize="20"/>
        <ComboBox x:Name="cmbEstudiantes" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="385,93,0,0" Width="200" SelectionChanged="cmbEstudiantes_SelectionChanged"/>

        <TextBox x:Name="txtNuevoGrupo" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,90,0,0" Width="200"/>
        <Button Content="Crear Grupo" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,124,0,0" Click="CrearGrupo_Click"/>

        <ListView x:Name="lstGruposEstudiantes" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="69,180,0,0" Width="437">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Estudiante" Width="200" DisplayMemberBinding="{Binding Nombre}" />
                    <GridViewColumn Header="Grupo" Width="100" DisplayMemberBinding="{Binding Grupo}" />
                </GridView>
            </ListView.View>
        </ListView>

        <materialDesign:PackIcon Kind="CloseCircle" Width="77" Foreground="#3f0e63" Height="55" Margin="920,4,0,0"/>
        <Button Click="BackButton_Click" Background="Transparent" Height="50" BorderThickness="0" Margin="918,7,5,593"></Button>
    </Grid>
</Window>
