<Window x:Class="AdisG3.gruposPfs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grupos de Estudiantes" Height="650" Width="1000" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Grupos" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,9,0,0" FontSize="35"/>
        
        
        <Button Content="Grupos aleatorios" HorizontalAlignment="Left" Height="47" Margin="818,14,0,0" VerticalAlignment="Top" Width="156" Click="Button_Click"/>
        <ListView x:Name="GroupListView" HorizontalAlignment="Left" Height="508" Margin="509,91,0,0" VerticalAlignment="Top" Width="460" SelectionChanged="GroupListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Grupo" Width="120" DisplayMemberBinding="{Binding GroupName}" />
                    <GridViewColumn Header="Integrantes">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding Members}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
