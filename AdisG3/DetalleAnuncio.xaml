<Window x:Class="AdisG3.DetalleAnuncio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalles del Anuncio" Height="400" Width="500">
    <Grid>
        <Label Content="Título:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
        <TextBox x:Name="txtTitulo" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Margin="20,45,0,0" IsReadOnly="True"/>

        <Label Content="Nombre del Profesor:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,85,0,0"/>
        <TextBox x:Name="txtNombreProfesor" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Margin="20,114,0,0" IsReadOnly="True"/>

        <Label Content="Descripción:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,153,0,0"/>
        <TextBox x:Name="txtDescripcion" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="120" Margin="20,182,0,0" IsReadOnly="True"/>

        <Button Content="Cerrar" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,7" Click="CerrarButton_Click"/>
    </Grid>
</Window>
