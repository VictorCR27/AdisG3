<Window x:Class="AdisG3.cargarAnuncios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdisG3"
        mc:Ignorable="d"
        Title="Cargar Anuncios" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="Título de Anuncio:" FontSize="15" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtTitulo" Width="297" Height="30" Margin="-450,0,0,5" TextChanged="txtTitulo_TextChanged" />

            <TextBlock Text="Descripción de Anuncio:" FontSize="15" FontWeight="Bold" Margin="0,25,0,5"/>
            <TextBox x:Name="txtDescripcion" Width="735" Height="196" Margin="-10,0,0,10" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextChanged="txtDescripcion_TextChanged" />
            <Button Content="Publicar" Width="104" Margin="0,10,-600,10" Click="btnPublicar_Click"/>
        </StackPanel>
    </Grid>
</Window>
