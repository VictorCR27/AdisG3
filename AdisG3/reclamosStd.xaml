<Window x:Class="AdisG3.reclamosStd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enviar Reclamos" Height="550" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Enviar Reclamos" FontSize="18" FontWeight="Bold" Margin="10,10"/>

        <StackPanel Margin="10,40">
            <TextBlock Text="Reclamo:" FontSize="17" Margin="0,10"/>
            <TextBox x:Name="txtReclamo" Margin="5,5,0,0" TextChanged="txtReclamo_TextChanged" Height="293"/>

            <Button Content="Enviar Reclamo" Width="137" HorizontalAlignment="Right" Click="EnviarReclamo_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
